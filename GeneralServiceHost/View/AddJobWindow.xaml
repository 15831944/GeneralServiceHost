<Window x:Class="GeneralServiceHost.View.AddJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeneralServiceHost.View"
        DataContext="{Binding Source={StaticResource Locator}, Path=AddJobWindow}"
        mc:Ignorable="d"
        Title="AddJobWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0"
                  Header="程序集选择">

            <StackPanel Orientation="Horizontal">

                <Button Content="选择文件"
                        Command="{Binding UploadFileCommand}"></Button>
                <ComboBox  Width="100"
                           ItemsSource="{Binding JobTypes}"
                           DisplayMemberPath="FullName"
                           SelectedItem="{Binding JobType}"></ComboBox>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="1"
                  Header="计划设置">

            <TextBox TextWrapping="Wrap" Text="{Binding CmdOutput}"></TextBox>
        </GroupBox>
        <StackPanel Grid.Row="2">
            <Button Content="执行"
                    Command="{Binding SetCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
